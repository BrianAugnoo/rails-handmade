<div class="row mt-3" id="user-controll">
  <div class="col-6 px-2">
    <% if current_user.subscribed?(@user) %>
      <%= button_to "Unsubscribe", subscription_path(current_user.subscription(@user), user_id: @user), method: :delete, class: "btn btn-outline-dark w-100 fw-semibold py-1 small" %>
    <% else %>
      <%= button_to "Subscribe", subscriptions_path(user_id: @user), method: :post, class: "btn btn-primary w-100 fw-semibold py-1 small" %>
    <% end %>
  </div>

  <div class="col-6 px-2">
    <%= link_to "message", new_conversation_path(Conversation.new, recipient_id: @user), class: "btn btn-outline-dark w-100 fw-semibold py-1 small" %>
  </div>
</div>
