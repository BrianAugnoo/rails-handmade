<div class="container py-3" style="height: 100vh; overflow: hidden;">
  <!-- Profile Header -->
  <div class="d-flex align-items-center justify-content-center mb-2">
    <% if @user.avatar.attached? %>
      <%= cl_image_tag @user.avatar.key,
        class: "rounded-circle me-4",
        width: "80", height: "80" %>
    <% else %>
      <img src="<%= asset_path('default-avatar.jpg') %>"
          class="rounded-circle me-4"
          width="80" height="80"
          alt="Avatar">
    <% end %>

    <div>
      <p class="fw-semibold fs-5 mb-2 mb-lg-3"><%= @user.user_name %></p>
      <div class="d-flex gap-4">
        <div class="text-center">
          <p class="mb-0 fw-bold"><%= @user.arts.size %></p>
          <small class="text-muted">Artworks</small>
        </div>
        <div id="subscribeds" class="text-center">
          <%= render "subscribeds" %>
        </div>
        <div class="text-center">
          <p class="mb-0 fw-bold"><%= @user.subscribers.count %></p>
          <small class="text-muted">Following</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Control Buttons -->
  <div class="mb-3">
    <% if @user == current_user %>
      <%= render "self_controll" %>
    <% else %>
      <%= render "user_controll" %>
    <% end %>
  </div>

  <!-- Scrollable Vertical Posts -->
  <div style="overflow-y: auto; height: calc(100vh - 300px);">
    <div class="arts-cards d-flex flex-column gap-3 mt-4">
      <% @user.arts.each do |art| %>
        <%= link_to feed_path(data: art.id), class: "w-100" do %>
          <%= image_tag "artworkexample.jpg",
                class: "img-fluid w-100 rounded",
                alt: "Additional content image",
                style: "object-fit: cover; height: 300px;" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
