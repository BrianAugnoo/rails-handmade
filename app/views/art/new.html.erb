
<%= render "partial/back_button" %>

<!-- Main Container -->
<div class="container px-3 py-4">
  <div class="bg-white shadow-sm rounded-4 p-3">
    <h5 class="text-center text-primary mb-4">Publish Your New Art</h5>

    <%= form_with model: @art, url: art_index_path(@art), local: true do |f| %>

      <!-- Tags -->
      <div class="mb-3">
        <%= f.label :tags, "Tags", class: "form-label small fw-semibold" %>
        <%= f.text_field :tags, class: "form-control form-control-sm", placeholder: "e.g. abstract, nature" %>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <%= f.label :description, "Description", class: "form-label small fw-semibold" %>
        <%= f.text_area :description, rows: 4, class: "form-control form-control-sm", placeholder: "Describe your artwork..." %>
      </div>

      <!-- Photo Upload -->
      <div class="mb-3">
        <%= f.label :photo, "Image", class: "form-label small fw-semibold" %>
        <%= f.file_field :photo, accept: "image/*", class: "form-control form-control-sm", required: true %>
      </div>

      <!-- Video Upload -->
      <div class="mb-3">
        <%= f.label :video, "Video (optional)", class: "form-label small fw-semibold" %>
        <%= f.file_field :video, accept: "video/*", class: "form-control form-control-sm" %>
      </div>

      <!-- Submit -->
      <div class="d-grid">
        <%= f.submit "Publish", class: "btn btn-primary btn-sm rounded-pill" %>
      </div>

    <% end %>
  </div>

  <p class="text-center text-muted small mt-4">Msg verification past or not</p>
</div>
