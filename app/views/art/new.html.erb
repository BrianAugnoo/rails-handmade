<%= form_with model: @art, url: art_index_path(@art), local: true do |f| %>
  <div class="form-group">
    <%= f.label :tags, "Tags (comma-separated):" %>
    <%= f.text_field :tags, class: "form-control", placeholder: "Enter tags here..." %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description:" %>
    <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Describe your art..." %>
  </div>

  <div class="form-group">
    <%= f.label :photo, "Upload Image:" %>
    <%= f.file_field :photo, accept: "image/*", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :video, "Upload Video:" %>
    <%= f.file_field :video, accept: "video/*", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Publish Art", class: "btn btn-primary" %>
  </div>
<% end %>
