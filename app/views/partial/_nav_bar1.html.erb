<div id="nav-bar">
  <div class="position-fixed  d-flex justify-content-between align-items-center px-4 bg-light border-bottom" style="height: 64px; width:100%">
    <strong class="fs-5 text-capitalize text-primary">Handmade</strong>

    <div class="d-flex align-items-center">
      <%= link_to notifications_path, class: "text-decoration-none text-primary me-4 d-flex align-items-center" do %>
        <i class="fa-solid fa-bell fa-xl"></i>
      <% end %>
      <%= link_to conversations_path, class: "text-decoration-none text-primary d-flex align-items-center" do %>
        <i class="fa-solid fa-message fa-xl"></i>
      <% end %>
    </div>
  </div>
</div>




<nav class="navbar fixed-bottom navbar-light bg-light border-top shadow-sm" style="height: 64px;">
  <div class="container-fluid d-flex justify-content-around text-center small">

    <%= link_to root_path, class: "nav-item flex-fill text-decoration-none #{'active text-primary' if current_page?(root_path)}" do %>
      <div class="d-flex flex-column align-items-center">
        <i class="fa-solid fa-house fa-xl"></i>
      </div>
    <% end %>

    <%= link_to search_path, class: "nav-item flex-fill text-decoration-none #{'active text-primary' if current_page?(search_path)}" do %>
      <div class="d-flex flex-column align-items-center">
        <i class="fa-solid fa-magnifying-glass fa-xl"></i>
      </div>
    <% end %>

    <%= link_to new_art_path, class: "nav-item flex-fill text-decoration-none #{'active text-primary' if current_page?(new_art_path)}" do %>
      <div class="d-flex flex-column align-items-center">
        <i class="fa-solid fa-upload fa-xl"></i>
      </div>
    <% end %>

    <%= link_to profile_path(current_user), class: "nav-item flex-fill text-decoration-none #{'active text-primary' if current_page?(profile_path(current_user))}" do %>
      <div class="d-flex flex-column align-items-center">
        <i class="fa-solid fa-user fa-xl"></i>
      </div>
    <% end %>

  </div>
