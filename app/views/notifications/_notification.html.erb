<div id="notification_<%= notification.id %>" class="notification <%= notification.read? ? 'read' : 'unread' %>">
  <div class="mb-3 p-3 border rounded shadow-sm bg-white">

    <!-- Date -->
    <div class="mb-2 small text-muted">
      <%= notification.created_at.strftime("%b %d, %Y") %>
    </div>

    <!-- Avatar + Message -->
    <div class="d-flex align-items-center">

      <!-- Profile Image -->
      <div class="me-3">
        <% if notification.user.avatar.attached? %>
          <%= image_tag url_for(notification.user.avatar), class: "rounded-circle", width: 48, height: 48 %>
        <% else %>
          <%= image_tag "default-avatar.jpg", class: "rounded-circle", width: 48, height: 48 %>
        <% end %>
      </div>

      <!-- Message -->
      <div>
        <p class="mb-0 text-dark small">
          You got a message from <span class="text-primary fw-semibold"><%= notification.user.user_name.titleize %></span>
        </p>
      </div>

    </div>
  </div>
</div>
