<div class="chat-list-container" id="search-conversation">
  <% conversations.each do |conversation| %>
    <% interlocutor = conversation.interlocutor(current_user) %>
    <%= link_to conversation_path(conversation), class: "chat-item", hiden: true do %>
      <%= render "conversations/chat_avatar", interlocutor: interlocutor %>
      <div class="chat-info">
        <div class="chat-name"><%= interlocutor.user_name %></div>
      </div>
    <% end %>
  <% end %>
</div>
