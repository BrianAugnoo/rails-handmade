<div class="message-input">
  <%= form_with model: @message, url: create_message_path(@interlocutor), data: {turbo_stream: true, controller: "reset-input", action: "turbo:submit-end->reset-input#clear"}  do |form| %>
    <div class="form-group">
      <%= form.label :content, "Type your message:" %>
      <%= form.text_area :content, rows: 3, class: "form-control", placeholder: "Write your message here...", required: true, data: {"reset-input-target": "input"}%>
    </div>
    <div class="form-group">
      <%= form.submit "Send", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
